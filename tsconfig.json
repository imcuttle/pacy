{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es6",
    "sourceMap": false,
    "declaration": false,
    "moduleResolution": "node",
    "outDir": "types",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@pacy/*": ["packages/*/src"]
    }
  },
  "include": ["./src"],
  "exclude": ["node_modules", "test", "__tests__"]
}
